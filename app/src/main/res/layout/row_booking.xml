<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="9dp">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:gravity="center"
            android:id="@+id/bookingUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is BookingTitle"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/bookingUserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is BookingTitle"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/bookingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is BookingTitle"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/bookingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bokking Id"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/bookingDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dates of working"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/bookingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time For coming and going"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/bookingHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Working Hours"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/bookingAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/bookingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:layout_gravity="center"
            android:textColor="@color/txt_pending_color"
            />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".5"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:textColor="#4CAF50"
                    />
                <ImageView
                    android:id="@+id/btnAcceptBooking"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_done_all_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".5"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:textColor="#ff00"
                    />
                <ImageView
                    android:id="@+id/btnCancelBooking"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_cancel_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>